{
	"env": {
		"node": true,
		"es2020": true
	},
	"extends": [
		"eslint:recommended",
		"google"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint"
	],
	"rules": {
		"no-unused-vars": "off",
		"@typescript-eslint/no-unused-vars": [
			"error",
			{
				"args": "all",
				"argsIgnorePattern": "^_"
			}
		],
		"semi": [
			"error",
			"always"
		],
		"indent": [
			"error",
			"tab"
		],
		"no-multiple-empty-lines": [
			"error",
			{
				"max": 3,
				"maxEOF": 0,
				"maxBOF": 1
			}
		],
		"brace-style": [
			"error",
			"stroustrup"
		],
		"max-len": [
			"error",
			{
				"code": 100,
				"comments": 120,
				"tabWidth": 2
			}
		],
		"comma-dangle": "off",
		"arrow-parens": "off",
		"object-curly-spacing": [
			"error",
			"always"
		],
		"require-jsdoc": "off",
		"operator-linebreak": [
			"error",
			"after"
		],
		"valid-jsdoc": "off",
		"padded-blocks": "off",
		"no-invalid-this": 0,
		"no-tabs": 0,
		"no-undef": 0,
		"linebreak-style": 0
	}
}